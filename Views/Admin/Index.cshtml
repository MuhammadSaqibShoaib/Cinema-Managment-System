
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

@* Customer data panel starts*@
<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto flex flex-wrap">
        <div class="flex flex-wrap -mx-4 mt-auto mb-auto lg:w-1/2 sm:w-2/3 content-start sm:pr-10">
            <div class="w-full sm:p-4 px-4 mb-6">
                <h1 class="title-font font-medium text-xl mb-2 text-gray-900">Customers summary panel</h1>
                <div class="leading-relaxed">Wow! you are doing an awesome job and here is the record breaking progress you are making</div>
            </div>
            <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
                <h2 class="title-font font-medium text-3xl text-gray-900">2.7K</h2>
                <p class="leading-relaxed">Vistors</p>
            </div>
            <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
                <h2 class="title-font font-medium text-3xl text-gray-900">1.8K</h2>
                <p class="leading-relaxed">Subscribes</p>
            </div>
            <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
                <h2 class="title-font font-medium text-3xl text-gray-900">35</h2>
                <p class="leading-relaxed">New bookings</p>
            </div>
            <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
                <h2 class="title-font font-medium text-3xl text-gray-900">4</h2>
                <p class="leading-relaxed">Coming soon bookings</p>
            </div>
        </div>
        <div class="lg:w-1/2 sm:w-1/3 w-full rounded-lg overflow-hidden mt-6 sm:mt-0">
            <img class="object-cover object-center w-full h-full" src="https://dummyimage.com/600x300" alt="stats">
        </div>
        @* Booking section starts *@
        <div class="grid justify-items-stretch">
            <a class="justify-self-end text-xl font-semibold hover:bg-gray-200" href="/Home/NowShowing">
                <button class="rounded-lg border-2 p-4 content-center border-pink-200 border-l-4 border-l-pink-500">Checkout Bookings!</button>
            </a>
        </div>
        @* Booking section ends*@
    </div>
</section>

@* Customer data panel ends *@


@* Mid heading starts *@
<hr class="border-2 border-pink-500 rounded-2xl" />

<section class="text-gray-600 mt-10">
    <div>
        <p class="font-bold text-4xl text-center">NOW SHOWING!</p>
    </div>
</section>
@* Mid heading ends *@


@* Now showing section Starts*@
<section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">

        <div class="flex flex-wrap -m-4">
            @for (int i = 0; i < 4; i++)
            {
                <div class="lg:w-1/4 md:w-1/2 p-4 w-full">
                    <a class="block relative h-48 rounded overflow-hidden">
                        <img alt="ecommerce" class="object-cover object-center w-full h-full block" src="https://dummyimage.com/420x260">
                    </a>
                    <div class="mt-4">
                        <h3 class="text-gray-500 text-xs tracking-widest title-font mb-1">CATEGORY</h3>
                        <h2 class="text-gray-900 title-font text-lg font-medium">The Catalyzer</h2>
                        <p class="mt-1">$16.00</p>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="grid grid-cols-2 gap-4 justify-items-stretch">
        <a class="justify-self-end text-xl font-semibold hover:bg-gray-200" href="/Home/NowShowing">
            <button class="rounded-lg border-2 p-4 content-center border-pink-200 border-l-4 border-l-pink-500">Checkout Now Showing Movies!</button>
        </a>
        <a class="justify-self-start text-xl font-semibold hover:bg-gray-200" href="/Home/NowShowing">
            <button class="rounded-lg border-2 p-4 content-center border-pink-200 border-l-4 border-l-pink-500">Add Movies to Now Showing</button>
        </a>
    </div>
    <hr class="border-2 border-pink-500 rounded-2xl mt-10" />
</section>
@* Now showing section End*@


